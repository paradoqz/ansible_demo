<html>
  <head>
    <title>{{ ansible_hostname }}</title>
  </head>
  <body>
    <hr />
    <center>
      <h1>VM {{ ansible_hostname }}</h1>
    </center>
    <div>
      CPU : {{ ansible_processor[2] }}
      <br />
      Cores : {{ ansible_processor_cores }}
      <br />
      Memory:
      <br />
      <ul style="list-style-type: none">
        {% for mem,type in ansible_memory_mb.real.items() %}
        <li>{{ mem }}: {{ type }}Mb</li>
        {% endfor %}
      </ul>
    </div>
  </body>
</html>
